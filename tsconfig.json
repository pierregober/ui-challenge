{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/hooks/*": ["./src/hooks/*"],
      "@/mock/*": ["./src/app/dist/mock/*"],
      "@/public/*": ["./public/*"],
      "@/src/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/ui/fonts/*": ["./src/app/ui/fonts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
